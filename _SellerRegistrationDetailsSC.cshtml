@model GSTECommerceLibrary.Admin.Admin
@{
    Layout = null;
}

@*<div class="container-fluid">
    <h5 class="mb-3 border-bottom pb-2">Seller Registration Details</h5>*@

<dl class="row">
    <!-- Seller Basic Info -->
    @*<dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.ClientCode</dd>*@

    <dt class="col-sm-3">Seller Name:</dt>
    <dd class="col-sm-9">@Model.SellerName</dd>

    <dt class="col-sm-3">Email:</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Date of Birth:</dt>
    <dd class="col-sm-9">
        @(Model.DOB.HasValue ? Model.DOB.Value.ToString("dd-MMM-yyyy") : "")
    </dd>





    <dt class="col-sm-3">Gender:</dt>
    <dd class="col-sm-9">@Model.Gender</dd>

    <dt class="col-sm-3">Mobile No:</dt>
    <dd class="col-sm-9">
        @if (!string.IsNullOrEmpty(Model.MobileNo))
        {
            // Remove any existing country code and format with +91
            string mobileNo = Model.MobileNo.Trim();

            // Remove any existing +91 or 91 prefix
            if (mobileNo.StartsWith("+91"))
            {
                mobileNo = mobileNo.Substring(3).Trim();
            }
            else if (mobileNo.StartsWith("91") && mobileNo.Length >= 12)
            {
                mobileNo = mobileNo.Substring(2).Trim();
            }

            // Format with +91 prefix
            @: +91 @mobileNo
        }
    </dd>

    <dt class="col-sm-3">User Registered On:</dt>
    <dd class="col-sm-9">
        @(Model.UserRegistrationDate.HasValue ? Model.UserRegistrationDate.Value.ToString("dd-MMM-yyyy") : "")
    </dd>


    <!-- Business Info -->
    <dt class="col-sm-3">GSTIN:</dt>
    <dd class="col-sm-9">@Model.GSTIN</dd>

    <dt class="col-sm-3">Business Name:</dt>
    <dd class="col-sm-9">@Model.BusinessName</dd>

    <dt class="col-sm-3">Business Registered On:</dt>
    <dd class="col-sm-9">
        @(Model.RegistrationDate.HasValue ? Model.RegistrationDate.Value.ToString("dd-MMM-yyyy") : "")
    </dd>

    <!-- Bank Details -->
    <dt class="col-sm-3">Bank Holder Name:</dt>
    <dd class="col-sm-9">@Model.BankHolderName</dd>

    <dt class="col-sm-3">Bank Account No:</dt>
    <dd class="col-sm-9">@Model.BankAccountNo</dd>

    <dt class="col-sm-3">IFSC Code:</dt>
    <dd class="col-sm-9">@Model.IFSCCode</dd>

    <!-- Address -->
    <dt class="col-sm-3">Address:</dt>
    <dd class="col-sm-9">@Model.Address</dd>

    <dt class="col-sm-3">City:</dt>
    <dd class="col-sm-9">@Model.ClientCityName</dd>

    <dt class="col-sm-3">Landmark:</dt>
    <dd class="col-sm-9">@Model.Landmark</dd>



    <dt class="col-sm-3">State:</dt>
    <dd class="col-sm-9">@Model.ClientState</dd>



    <dt class="col-sm-3">Pincode:</dt>
    <dd class="col-sm-9">@Model.Pincode1</dd>
</dl>
@*</div>*@

<body>
    <div class="container">
        <!-- OTP Verification Panel -->
        <div class="form-container">
            @using (Html.BeginForm("VerifyOTPTB", "Admin", FormMethod.Post, new { id = "otp-form" }))
            {
                @Html.AntiForgeryToken()
                <h1>Verify OTP</h1>
                <p>An OTP has been sent to<br /><strong>@(Model?.Email ?? "your email")</strong></p>

                <!-- Hidden field to pass the email to the controller -->
                @Html.HiddenFor(m => m.Email)

                <!-- OTP Input -->
                @Html.TextBoxFor(m => m.OtpCode, new
                {
                    placeholder = "Enter OTP",
                    maxlength = "6",
                    required = "required",
                    autocomplete = "off",
                    id = "OtpCode" // Added ID for JS selection
                })

                <!-- Validation Messages -->
                @Html.ValidationMessageFor(m => m.OtpCode, "", new { @class = "text-danger", style = "color:red; text-align:center;" })
                @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:red; text-align:center;" })

                if (ViewBag.Message != null)
                {
                    <div style="color:red; text-align:center;">@ViewBag.Message</div>
                }
                if (TempData["Message"] != null)
                {
                    <div id="tempDataMessage" style="color:green; text-align:center;">@TempData["Message"]</div>
                }

                <!-- Timer Display -->
                <div id="timer" style="font-weight: bold; color: #555;"></div>

                <button type="submit" id="verify-btn">Verify OTP</button>

                <!-- Resend OTP Button  -->
                <button type="button" id="resend-otp-btn">Resend OTP</button>

                <div class="back-link">
                    <a href="@Url.Action("LoginTB", "Admin")">← Back to Login</a>
                </div>
            }
        </div>
    </div>

    <!-- Toast message container -->
    <div id="toast-message" class="toast"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
    const timerElement = document.getElementById('timer');
    const verifyBtn = document.getElementById('verify-btn');
    const resendBtn = document.getElementById('resend-otp-btn');
    const toastElement = document.getElementById('toast-message');
    const tempDataMessage = document.getElementById('tempDataMessage');
    const otpForm = document.getElementById('otp-form');

    let isSubmitting = false;
    let timerInterval;

    // ✅ Retrieve previous time from sessionStorage if available
    let timeLeft = parseInt(sessionStorage.getItem("otpTimeLeft")) || 60;

    function startTimer() {
        // Don’t start if already running
        if (timerInterval) return;

        verifyBtn.disabled = false;
        resendBtn.disabled = true;
        resendBtn.textContent = 'Resend OTP';
        timerElement.style.display = 'block';

        timerInterval = setInterval(() => {
            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                timerInterval = null;
                sessionStorage.removeItem("otpTimeLeft");
                timerElement.innerHTML = "OTP expired!";
                verifyBtn.disabled = true;
                resendBtn.disabled = false;
                showToast("OTP has expired, please request a new one.");
            } else {
                const seconds = String(timeLeft).padStart(2, '0');
                timerElement.innerHTML = `OTP expires in: 00:${seconds}`;
                timeLeft -= 1;
                // ✅ Save current time every second
                sessionStorage.setItem("otpTimeLeft", timeLeft);
            }
        }, 1000);
    }

    function showToast(message) {
        toastElement.textContent = message;
        toastElement.className = "toast show";
        setTimeout(() => {
            toastElement.className = toastElement.className.replace("show", "");
        }, 3000);
    }

    // 🔁 When user clicks “Resend OTP”
    resendBtn.addEventListener('click', function () {
        const email = document.getElementById('Email').value;
        showToast('Sending a new OTP...');
        resendBtn.disabled = true;
        resendBtn.textContent = 'Sending...';

        fetch(`@Url.Action("ResendOTP", "Admin")?email=${encodeURIComponent(email)}`)
            .then(response => response.json())
            .then(data => {
                showToast(data.message);
                if (data.success) {
                    if (tempDataMessage) {
                        tempDataMessage.style.display = 'none';
                    }
                    // ✅ Reset timer only when new OTP is successfully sent
                    clearInterval(timerInterval);
                    timeLeft = 60;
                    sessionStorage.setItem("otpTimeLeft", timeLeft);
                    timerInterval = null;
                    startTimer();
                } else {
                    resendBtn.disabled = false;
                    resendBtn.textContent = 'Resend OTP';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast("An error occurred. Please check your connection.");
                resendBtn.disabled = false;
                resendBtn.textContent = 'Resend OTP';
            });
    });

    // ✅ Prevent double-submit
    otpForm.addEventListener('submit', function (event) {
        if (isSubmitting) return;
        const otpInput = document.getElementById('OtpCode');
        if (otpInput.value.trim().length > 0) {
            isSubmitting = true;
        }
    });

    // ✅ Start the timer
    startTimer();



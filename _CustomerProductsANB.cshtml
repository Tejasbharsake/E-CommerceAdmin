@{
    var dt = ViewBag.CustomerData as System.Data.DataSet;
    var tabName = ViewBag.TabName as string;
    var error = ViewBag.Error as string;
}

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">
        <h5>Error Loading Data</h5>
        <p>@error</p>
        <button onclick="window.location.reload()" class="btn btn-sm btn-warning">
            <i class="fas fa-sync-alt"></i> Refresh Page
        </button>
    </div>
}
else if (dt != null && dt.Tables.Count > 0 && dt.Tables[0].Rows.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="customerTable">
            <thead class="table-dark">
                <tr>
                    <th>Customer Code</th>
                    <th>Customer Name</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th>Address</th>
                    <th>Total Orders</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in dt.Tables[0].Rows)
                {
                    <tr>
                        <td>@row["CustomerCode"]</td>
                        <td>@row["CustomerName"]</td>
                        <td>@row["EmailAddress"]</td>
                        <td>@row["CustomerPhone"]</td>
                        <td>@(string.IsNullOrEmpty(row["CustomerAddress"].ToString()) ? "N/A" : row["CustomerAddress"])</td>
                        <td>@row["TotalOrder"]</td>
                        <td>
                            @if (row["IsActive"] != DBNull.Value && Convert.ToInt32(row["IsActive"]) == 1)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary view-btn"
                                    data-code="@row["CustomerCode"]"
                                    title="View Orders">
                                <i class="fas fa-eye"></i> View
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        No customers found @(tabName == "Active" ? "that are active" : "")
    </div>
}   
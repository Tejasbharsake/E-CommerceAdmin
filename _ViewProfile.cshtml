    <div class="card-body p-4 p-md-5">
        <div class="row g-4">
            <!-- Profile Details Column -->
            <div class="col-lg-6">
                <h5 class="form-section-title">Profile Details</h5>
                <div class="profile-photo-container">
                    <img src="@Url.Content("~/Content/Document/UserPhotos/" + (string.IsNullOrEmpty(Model.UserPhoto) ? "default.jpg" : Model.UserPhoto))"
                         alt="User Photo"
                         class="profile-photo" />
                </div>

                <div class="detail-item">
                    <span class="detail-label">Full Name</span>
                    <p class="detail-value">@Model.UserName</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Business Name</span>
                    <p class="detail-value">@Model.BusinessName</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Email Id</span>
                    <p class="detail-value">@Model.EmailId</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Mobile No.</span>
                    <p class="detail-value">@Model.MobileNo</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Alternate Mobile No.</span>
                    <p class="detail-value">@(Model.AlternateMobileNo ?? "N/A")</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Gender</span>
                    <p class="detail-value">@Model.Gender</p>
                </div>
            </div>

            <!-- Bank Details Column -->
            <div class="col-lg-6">
                <h5 class="form-section-title">Bank & KYC Details</h5>
                <div class="detail-item">
                    <span class="detail-label">GSTIN</span>
                    <p class="detail-value">@Model.GSTIN</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Aadhaar Card No.</span>
                    <p class="detail-value">@Model.AadhaarCardNo</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">PAN Card No.</span>
                    <p class="detail-value">@(Model.PanCardNo ?? "N/A")</p>
                </div>
                <hr />
                <div class="detail-item">
                    <span class="detail-label">Bank Account No.</span>
                    <p class="detail-value">@Model.BankAccountNo</p>
                </div>
                <div class="detail-item" style="margin-bottom: 0;">
                    <span class="detail-label">IFSC Code</span>
                    <p class="detail-value">@Model.IFSCCode</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Full Address</span>
                    <p class="detail-value">@Model.Address</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">City</span>
                    <p class="detail-value">@Model.City</p>
                </div>

                <div class="detail-item">
                    <span class="detail-label">State</span>
                    <p class="detail-value">@Model.State</p>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Country</span>
                    <p class="detail-value">@Model.Country</p>
                </div>



@model IEnumerable<GSTECommerceLibrary.Admin.Admin>

@{
    ViewBag.Title = "_TotalProductANB";
    var sr = 1; // Counter for Serial No
}

<div class="card mt-4">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Total Products</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sr. No</th> <!-- Serial No Column -->
                    <th>Product Code</th>
                    <th>Product Name</th>
                    @*<th>Main Category</th>*@
                    <th>MRP</th>
                    <th>Actual Price</th>
                    <th>Stock</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@sr</td> <!-- Serial No value -->
                        <td>@item.ProductCode</td>
                        <td>@item.ProductName</td>
                        @*<td>@item.MainCategoryName</td>*@
                        <td>@item.ProductMRP</td>
                        <td>@item.ActualProductPrice</td>
                        <td>@item.Stock</td>
                    </tr>
                    sr++;
                }
            </tbody>
        </table>
    </div>
</div>
